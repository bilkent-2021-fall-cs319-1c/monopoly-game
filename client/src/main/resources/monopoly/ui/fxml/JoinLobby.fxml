<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import org.tbee.javafx.scene.layout.fxml.*?>
<?import javafx.scene.control.*?>


<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="monopoly.ui.JoinLobbyController">
	<MigPane fx:id="mainPane" layout=" debug, fill, center"
		rows="[fill]" cols="[::39%, fill, grow]2%[::59%, fill, grow]">
		<MigPane fx:id="leftPane" layout="wrap"
			rows="13%[15%]5%[10%]0[10%]2%[10%]5%[10%, top]5%" cols="5%[left]2%[left]"
			MigPane.cc="grow">
			<Text fx:id="mainTitle" MigPane.cc="span 2">Join Lobby</Text>

			<Text fx:id="promptText" MigPane.cc="span 2, split 2,left, wrap, bottom">Choose a room to join</Text>
			<Text fx:id="infoText" MigPane.cc="span 2, left">You can also search for a room by entering its name or by the player. </Text>
			<Text fx:id="roomTitle">Room Name:</Text>
			<TextField fx:id="roomName" text="" />

			<Text fx:id="passwordTitle">Password:</Text>
			<TextField fx:id="passwordValue" text="" />

			<Button fx:id="joinButton" mnemonicParsing="false"
				text="Join" MigPane.cc="span 2, center" />
		</MigPane>
		<BorderPane fx:id="rightPane"
			 MigPane.cc="grow, wrap">

			<Pagination fx:id="lobbyTablePagination">
				<fx:define>
					<TableView fx:id="lobbyTable">
						<columns>
							<TableColumn fx:id="ownerImageCol" text="Owner"/>
							<TableColumn fx:id="lobbyNameCol" text="Lobby Name"/>
							<TableColumn fx:id="playerNumCol" text="Players"/>
						</columns>
					</TableView>
				</fx:define>
			</Pagination>

		</BorderPane>

	</MigPane>
</StackPane>
