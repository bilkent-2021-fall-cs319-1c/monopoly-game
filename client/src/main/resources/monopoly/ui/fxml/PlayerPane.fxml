<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>
<?import org.tbee.javafx.scene.layout.fxml.*?>
<?import monopoly.ui.UIUtil?>

<fx:root xmlns:fx="http://javafx.com/fxml" type="MigPane"
	layout="fill" rows="0[:84%:84%]:1%:1%[:14%:14%]:1%:1%"
	style="-fx-border-color: gray; 
		-fx-border-width: 5;
		-fx-border-insets: -5;
		-fx-border-radius: 10 10 10 10;
		-fx-background-color: lightblue ">

	<!-- Player's Name -->
	<Group MigPane.cc="spany 2" fx:id="playerNameLabelWrapper">
		<Label text="Player 1" style="-fx-rotate: -90"
			fx:id="playerNameLabel" />
	</Group>

	<!-- Player's Image or Webcam -->
	<ImageView MigPane.cc="wrap" fx:id="playerImage" />

	<!-- Player's Status Bar -->
	<MigPane layout="" cols="[::50%]push[::50%]" rows="0[]0"
		MigPane.cc="grow">
		<Label text="1500M" fx:id="moneyLabel" />

		<!-- Trade or Webcam/Mic Icons -->
		<MigPane layout="hidemode 3" rows="0[]0">
			<Label text="Trade" fx:id="tradeLabel" />

			<ImageView fx:id="webcamIcon" visible="false"
				pickOnBounds="true" onMouseClicked="#toggleWebcam">
				<image>
					<UIUtil fx:constant="WEBCAM_CROSSED_ICON" />
				</image>
			</ImageView>

			<ImageView fx:id="micIcon" visible="false"
				pickOnBounds="true" onMouseClicked="#toggleMicrophone">
				<image>
					<UIUtil fx:constant="MICROPHONE_CROSSED_ICON" />
				</image>
			</ImageView>
		</MigPane>
	</MigPane>
</fx:root>
