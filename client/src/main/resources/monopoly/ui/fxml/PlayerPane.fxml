<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>
<?import org.tbee.javafx.scene.layout.fxml.*?>

<fx:root xmlns:fx="http://javafx.com/fxml" type="MigPane"
	layout="fill" cols="0[10%:10%:10%][grow]0"
	rows="0[:85%:85%]0[:15%:15%]0"
	style="-fx-border-color: gray; 
		-fx-border-width: 5;
		-fx-border-radius: 10 10 10 10;
		-fx-background-color: lightblue ">

	<!-- Player's Name -->
	<Group MigPane.cc="spany 2" fx:id="playerNameLabelWrapper">
		<Label text="Player 1" style="-fx-rotate: -90"
			fx:id="playerNameLabel" />
	</Group>

	<!-- Player's Image or Webcam -->
	<ImageView MigPane.cc="wrap" fx:id="playerImage" />

	<!-- Player's Status Bar -->
	<MigPane layout="" cols="[::50%]push[::50%]" rows="0[]0"
		MigPane.cc="grow">
		<Label text="1500M" fx:id="moneyLabel" />
		<MigPane layout="" rows="0[]0">
			<Label text="Trade" fx:id="tradeLabel" />
		</MigPane>
	</MigPane>
</fx:root>
