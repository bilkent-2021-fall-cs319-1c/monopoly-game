<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.tbee.javafx.scene.layout.fxml.MigPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<fx:root xmlns="http://javafx.com/javafx/15.0.1"
         xmlns:fx="http://javafx.com/fxml" type="MigPane" layout="fill"
         cols="[::19%]1%[::49%]1%[::30%]" rows="[]">

    <ImageView fx:id="playerImage" preserveRatio="true" MigPane.cc="center" />

    <Text fx:id="playerName" MigPane.cc="left"/>

    <MigPane fx:id="buttonGroup" layout="center, fill" rows="[fill]2%[fill]" cols="[fill]">
        <Button fx:id="makeAdminButton" text="Make Admin"/>
        <Button fx:id="removeButton" text="Remove"/>
    </MigPane>

</fx:root>
