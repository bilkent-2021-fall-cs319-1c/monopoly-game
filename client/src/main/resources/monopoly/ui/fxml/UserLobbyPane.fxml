<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import monopoly.ui.UIUtil?>

<fx:root xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml" type="MigPane" layout="fill, wrap, debug"
	cols="[::19%]1%[::49%]1%[::30%]" rows="0[fill, grow]0"
	style="-fx-background-color: indianred" styleClass="bordered">
	<stylesheets>
		<UIUtil fx:constant="COMMON_CSS" />
		<UIUtil fx:constant="PLAYER_LOBBY_PANE_SCREEN_CSS" />
	</stylesheets>

	<ImageView fx:id="playerImage" MigPane.cc="center"
		fitHeight="70" fitWidth="70">
		<image>
			<UIUtil fx:constant="DEFAULT_PLAYER_IMAGE" />
		</image>
	</ImageView>

	<Text fx:id="playerName" MigPane.cc="left" />

	<MigPane fx:id="buttonGroup" layout="center, fill"
			 rows="0[100%]0" cols="[grow]" MigPane.cc="center">
		<Button fx:id="removeButton" text="Remove" MigPane.cc="center" />
	</MigPane>

</fx:root>
